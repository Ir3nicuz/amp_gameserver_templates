[
    {
        "DisplayName": "Creating System Links",
        "UpdateSourceMethod": "ExecuteCommand",
        "Command": "cmd.exe",
        "Arguments": [
            "/c", 
            "mklink /J \".\\GameConfig\" \"C:\\Users\\AMP\\AppData\\Local\\MyGame\""
        ]
    },
    {
        "UpdateStageName": "SteamCmd Server Update",
        "UpdateSourceMethod": "ExecuteCommand",
        "Command": "C:\\SteamCmd\\steamcmd.exe",
        "Arguments": [
            "+force_install_dir", "./GameServerFiles/",
            "@sSteamCmdForcePlatformType", "windows",
            "+login", "anonymous",
            "+app_update", "{{SteamAppId}}",
            "-beta", "{{ServerFilesBetaVersion}}", "-validate",
            "+quit"
        ]
    }
]
